<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="portfolio.shiitake.system.repository.ShiitakeRepository">

  <select id="findAllStaff" resultType="portfolio.shiitake.system.data.staff.Staff">
    SELECT * FROM staff
  </select>

  <insert id="insertStaff" parameterType="portfolio.shiitake.system.data.staff.Staff">
    INSERT INTO staff (id, name, login_code)
    VALUES (#{id}, #{name}, #{loginCode})
  </insert>

</mapper>